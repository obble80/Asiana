@model Asiana.UI.Models.PageModel
@using Asiana.UI.Extensions
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section TopNavigation {
    @{Html.RenderPartial("Navigation/TopNavigationList", Model.TopNavigation);}
}
<div id="content">
<div class="rotatingPageBanner">
    <div class="wrapper">
        @Html.HtmlActionLink(@<img src="/content/products/promotion/hand-made-fair-trade.png" />,"Index","Browse",new { path = "/Department/Bags"}, null)
        <img src="/content/products/promotion/free-delivery-1.png" />
    </div>
</div>
    <div id="body">
        <div class="sideBox slot">
            <h1>
                <em>Hand Made</em></h1>
            <p>
